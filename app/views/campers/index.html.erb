<h1>Listing Campers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Company</th>
      <th>Model</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campers.each do |camper| %>
      <tr>
        <td><%= camper.customer_id %></td>
        <td><%= camper.company %></td>
        <td><%= camper.model %></td>
        <td><%= camper.year %></td>
        <td><%= link_to 'Show', camper_path(camper) %></td>
        <td><%= link_to 'Edit', edit_camper_path(@customer) %></td>
        <td><%= link_to 'Destroy', camper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

